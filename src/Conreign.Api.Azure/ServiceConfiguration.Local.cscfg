<?xml version="1.0" encoding="utf-8"?>
<ServiceConfiguration serviceName="Conreign.Cloud.Api" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceConfiguration" osFamily="4" osVersion="*" schemaVersion="2015-04.2.6">
  <Role name="Conreign.Host.Azure">
    <Instances count="1" />
    <ConfigurationSettings>
      <Setting name="Environment" value="emulator" />
      <Setting name="SystemStorageConnectionString" value="UseDevelopmentStorage=true" />
      <Setting name="DataStorageConnectionString" value="mongodb://localhost:27017/conreign" />
      <Setting name="Microsoft.WindowsAzure.Plugins.Diagnostics.ConnectionString" value="UseDevelopmentStorage=true" />
    </ConfigurationSettings>
  </Role>
  <Role name="Conreign.Api.Host.Azure">
    <Instances count="1" />
    <ConfigurationSettings>
      <Setting name="Environment" value="emulator" />
      <Setting name="SystemStorageConnectionString" value="UseDevelopmentStorage=true" />
      <Setting name="ElasticSearchUri" value=""/>
